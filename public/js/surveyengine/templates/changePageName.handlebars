<form id="changePageNameForm" method="POST" class="form-horizontal" enctype="multipart/form-data">
    <input type="hidden" name="surveyId" id="surveyId" value="{{surveyId}}" />
    <input type="hidden" name="pageId" id="pageId" value="{{pageId}}" />
    <div class="col-sm-12 col-md-12">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <strong>Enter the new page name:</strong>
            </div>
        </div>
        <div class="row" style="margin-bottom:20px;">
            <div class="col-sm-12 col-md-12">
                <input type="text" name="name" id="name" placeholder="Enter the new page name" style="width:100%;" value="{{pageTitle}}" />
            </div>
        </div>
    </div>
</form>